<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cards.CardSessionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCardSessionDate"
/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCardSessionNameUser"
android:onClick="onClickTextViewCardSessionNameUser"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardSessionDate"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCardSessionProcedures"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardSessionNameUser"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCardSessionPrice"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardSessionProcedures"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCardSessionTimeEnd"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardSessionPrice"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textViewCardSessionComment"
    app:layout_constraintTop_toBottomOf="@+id/textViewCardSessionTimeEnd"
/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:id="@+id/textvIewCardSessionPlaceOnTheList"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardSessionComment"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCardSessionPlaceOnTheList"
        android:text="Сделать записсь первой в курсе"
        app:layout_constraintTop_toBottomOf="@+id/textvIewCardSessionPlaceOnTheList"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:id="@+id/checkBoxCardSessionNotNotification"
    android:text="Блокировка автоматической рассылки SMS"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCardSessionPlaceOnTheList"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCardSessionDooble"
        android:text="Дублировать запись"
        android:onClick="onClickButtonCardSessionDooble"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCardSessionNotNotification"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCardSessionTransfer"
        android:onClick="onClickButtonCardSessionTransfer"
        android:text="Перенести запись"
        app:layout_constraintTop_toBottomOf="@+id/buttonCardSessionDooble"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCardSessionRead"
        android:onClick="onclickButtonCardSessionRead"
        android:text="Редактировать запись"
        app:layout_constraintTop_toBottomOf="@+id/buttonCardSessionTransfer"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCardSessionDelete"
        android:onClick="onClickButtonCardSessionDelete"
        android:text="Удалить запись"
        app:layout_constraintTop_toBottomOf="@+id/buttonCardSessionRead"
/>
</androidx.constraintlayout.widget.ConstraintLayout>